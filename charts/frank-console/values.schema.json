{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "nameOverride": {
            "type": "string",
            "description": "String to partially override fullname template (will maintain the release name)",
            "default": ""
        },
        "fullnameOverride": {
            "type": "string",
            "description": "String to fully override fullname template",
            "default": ""
        },
        "image": {
            "type": "object",
            "properties": {
                "registry": {
                    "type": "string",
                    "description": "Frank!Framework Console image registry",
                    "default": "nexus.frankframework.org"
                },
                "repository": {
                    "type": "string",
                    "description": "Frank!Framework Console image repository",
                    "default": "frank-console"
                },
                "tag": {
                    "type": "string",
                    "description": "Frank!Framework Console image tag (immutable tags are recommended) update this tag manually to upgrade the Frank!Framework version",
                    "default": ""
                },
                "pullPolicy": {
                    "type": "string",
                    "description": "Frank!Framework Console image pull policy",
                    "default": "IfNotPresent"
                },
                "pullSecrets": {
                    "type": "array",
                    "description": "Frank!Framework Console image pull secrets",
                    "default": [],
                    "items": {}
                }
            }
        },
        "environmentVariables": {
            "type": "object",
            "properties": {
                "JAVA_OPTS": {
                    "type": "string",
                    "description": "Set the JAVA_OPTS for the Frank!Framework",
                    "default": "-XX:MaxRAMPercentage=80.0",
                    "nullable": true
                },
                "spring_profiles_active": {
                    "type": "string",
                    "description": "Set the active Spring profiles for the Frank!Framework (default enables the ladybug-database profile)",
                    "default": "ladybug-database",
                    "nullable": true
                }
            }
        },
        "envFrom": {
            "type": "array",
            "description": "Set environment variables from configmaps or secrets",
            "default": "[]",
            "items": {
                "type": "string"
            }
        },
        "generateConfigMap/name": {
            "type": "string",
            "description": "Name of the configmap",
            "default": null,
            "nullable": true
        },
        "generateConfigMap/items/key": {
            "type": "string",
            "description": "Key of the configmap",
            "default": null,
            "nullable": true
        },
        "generateConfigMap/items/path": {
            "type": "string",
            "description": "Path of the configmap",
            "default": null,
            "nullable": true
        },
        "generateConfigMap/mountPath": {
            "type": "string",
            "description": "Path where the configmap will be mounted (default /opt/frank/secrets)",
            "default": null,
            "nullable": true
        },
        "generateSecret/name": {
            "type": "string",
            "description": "Name of the secret",
            "default": null,
            "nullable": true
        },
        "generateSecret/type": {
            "type": "string",
            "description": "Type of the secret (default Opaque)",
            "default": null,
            "nullable": true
        },
        "generateSecret/items/key": {
            "type": "string",
            "description": "Key of the secret",
            "default": null,
            "nullable": true
        },
        "generateSecret/items/path": {
            "type": "string",
            "description": "Path of the secret",
            "default": null,
            "nullable": true
        },
        "generateSecret/mountPath": {
            "type": "string",
            "description": "Path where the secret will be mounted (default /opt/frank/secrets)",
            "default": null,
            "nullable": true
        },
        "extraVolumes": {
            "type": "array",
            "description": "Optionally specify extra list of additional volumes for WordPress pods",
            "default": [],
            "items": {}
        },
        "extraVolumeMounts": {
            "type": "array",
            "description": "Optionally specify extra list of additional volumeMounts for WordPress container(s)",
            "default": [],
            "items": {}
        },
        "sidecars": {
            "type": "array",
            "description": "Add additional sidecar containers to the Frank!Framework pod",
            "default": [],
            "items": {}
        },
        "initContainers": {
            "type": "array",
            "description": "Add additional init containers to the Frank!Framework pod",
            "default": [],
            "items": {}
        },
        "ladybugDatabase": {
            "type": "object",
            "properties": {
                "auth": {
                    "type": "object",
                    "properties": {
                        "existingSecret": {
                            "type": "string",
                            "description": "Name of the secret",
                            "default": ""
                        }
                    }
                }
            }
        },
        "replicaCount": {
            "type": "number",
            "description": "Number of Frank!Framework Console replicas to deploy",
            "default": 1
        },
        "startupProbe": {
            "type": "object",
            "properties": {
                "initialDelaySeconds": {
                    "type": "number",
                    "description": "Initial delay seconds for startupProbe",
                    "default": 10
                },
                "periodSeconds": {
                    "type": "number",
                    "description": "Period seconds for startupProbe",
                    "default": 10
                },
                "timeoutSeconds": {
                    "type": "number",
                    "description": "Timeout seconds for startupProbe",
                    "default": 1
                },
                "failureThreshold": {
                    "type": "number",
                    "description": "Failure threshold for startupProbe",
                    "default": 42
                },
                "successThreshold": {
                    "type": "number",
                    "description": "Success threshold for startupProbe",
                    "default": 1
                },
                "httpGet": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Path for startupProbe",
                            "default": "/"
                        },
                        "port": {
                            "type": "number",
                            "description": "Port for startupProbe",
                            "default": 8080
                        }
                    }
                }
            }
        },
        "livenessProbe": {
            "type": "object",
            "properties": {
                "initialDelaySeconds": {
                    "type": "number",
                    "description": "Initial delay seconds for livenessProbe",
                    "default": 0
                },
                "periodSeconds": {
                    "type": "number",
                    "description": "Period seconds for livenessProbe",
                    "default": 10
                },
                "timeoutSeconds": {
                    "type": "number",
                    "description": "Timeout seconds for livenessProbe",
                    "default": 1
                },
                "failureThreshold": {
                    "type": "number",
                    "description": "Failure threshold for livenessProbe",
                    "default": 12
                },
                "successThreshold": {
                    "type": "number",
                    "description": "Success threshold for livenessProbe",
                    "default": 1
                },
                "httpGet": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Path for livenessProbe",
                            "default": "/"
                        },
                        "port": {
                            "type": "number",
                            "description": "Port for livenessProbe",
                            "default": 8080
                        }
                    }
                }
            }
        },
        "readinessProbe": {
            "type": "object",
            "description": "Configure the readiness probe",
            "default": {}
        },
        "resources": {
            "type": "object",
            "description": "Set the resources for the Frank!Framework Console containers",
            "default": {}
        },
        "terminationGracePeriodSeconds": {
            "type": "number",
            "description": "Number of seconds after which pods are forcefully killed",
            "default": 60
        },
        "nodeSelector": {
            "type": "object",
            "description": "Node labels for pod assignment",
            "default": {}
        },
        "tolerations": {
            "type": "array",
            "description": "Set tolerations for pod assignment",
            "default": [],
            "items": {}
        },
        "affinity": {
            "type": "object",
            "description": "Set affinity for pod assignment",
            "default": {}
        },
        "timeZone": {
            "type": "string",
            "description": "used for database connection and log timestamps",
            "default": "Etc/UTC"
        },
        "service": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Frank!Framework Console service type",
                    "default": "ClusterIP"
                },
                "port": {
                    "type": "number",
                    "description": "Frank!Framework Console service port",
                    "default": 80
                },
                "annotations": {
                    "type": "object",
                    "description": "Additional annotations for the Frank!Framework Console service",
                    "default": {}
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable ingress record generation for Frank!",
                    "default": false
                },
                "className": {
                    "type": "string",
                    "description": "IngressClass that will be used to implement the Ingress (Kubernetes 1.18+)",
                    "default": ""
                },
                "annotations": {
                    "type": "object",
                    "description": "Additional annotations for the Ingress resource. To enable certificate autogeneration, place here your cert-manager annotations.",
                    "default": {}
                },
                "hosts/host": {
                    "type": "string",
                    "description": "Set hostname",
                    "default": null,
                    "nullable": true
                },
                "hosts/paths/path": {
                    "type": "string",
                    "description": "Set path (context url)",
                    "default": null,
                    "nullable": true
                },
                "hosts/paths/pathType": {
                    "type": "string",
                    "description": "Set type of path",
                    "default": null,
                    "nullable": true
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean",
                    "description": "Enable creation of ServiceAccount for Frank!Framework Console pod",
                    "default": true
                },
                "annotations": {
                    "type": "object",
                    "description": "Additional custom annotations for the ServiceAccount",
                    "default": {}
                },
                "name": {
                    "type": "string",
                    "description": "The name of the ServiceAccount to use.",
                    "default": ""
                }
            }
        },
        "podAnnotations": {
            "type": "object",
            "description": "Annotations for Frank!Framework Console pods.",
            "default": {}
        },
        "podLabels": {
            "type": "object",
            "description": "Extra labels for Frank!Framework Console pods.",
            "default": {}
        }
    }
}