{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "frankframework": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string",
                            "description": "frank2example image registry",
                            "default": "nexus.frankframework.org"
                        },
                        "repository": {
                            "type": "string",
                            "description": "frank2example image repository",
                            "default": "frank2example"
                        },
                        "tag": {
                            "type": "string",
                            "description": "frank2example image tag (immutable tags are recommended)",
                            "default": "latest"
                        },
                        "pullPolicy": {
                            "type": "string",
                            "description": "frank2example image pull policy",
                            "default": "Always"
                        },
                        "pullSecrets": {
                            "type": "array",
                            "description": "frank2example image pull secrets",
                            "default": [],
                            "items": {}
                        }
                    }
                },
                "application": {
                    "type": "object",
                    "properties": {
                        "dtap": {
                            "type": "object",
                            "properties": {
                                "stage": {
                                    "type": "string",
                                    "description": "Set the `DTAP` stage. Options: `LOC`, `DEV`, `TST`, `ACC`, `PRD`",
                                    "default": "TST"
                                }
                            }
                        }
                    }
                },
                "replicaCount": {
                    "type": "number",
                    "description": "Number of Frank!Framework replicas to deploy",
                    "default": 1
                },
                "securityContext": {
                    "type": "object",
                    "properties": {
                        "readOnlyRootFilesystem": {
                            "type": "boolean",
                            "description": "Set the security context for the Frank!Framework containers",
                            "default": true
                        }
                    }
                }
            }
        }
    }
}